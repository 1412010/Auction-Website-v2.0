{{#section 'title'}}
    Lịch sử đấu giá sản phẩm
{{/section}}

{{#section 'css'}}
    <link href="/assets/site.css" rel="stylesheet" />
    <link href="/assets/bootstrap-3.3.7-dist/js/bootstrap.min.js" rel="stylesheet" />
    <link href="/assets/css/bootstrap-social.css" rel="stylesheet" type="text/css" media="all" />
    <link rel="stylesheet" type="text/css" href="/assets/css/breadcrumbs.css">
    <script type="text/javascript" src="assets/bootstrap-3.3.7-dist/js/bootstrap-datetimepicker.js" charset="UTF-8"></script>
    <link href="/assets/css/docs.css" rel="stylesheet">

    <style type="text/css">
        .btn-account i {
            margin-top: 2%;
            font-size: 30px;
        }
        
        .btn-account span {
            padding-left: 15px;
            padding-right: 5px;
            width: 100%;
            display: inline-block;
            text-align: left;
            font-size: 130%;
        }
        
        .btn-account span small {
            width: 100%;
            display: inline-block;
            text-align: left;
        }
    </style>
{{/section}}

{{#section 'breadcrumbs'}}
    <div class="row container-fluid">
        <ol class="breadcrumb breadcrumb-arrow">
            <li><a href="/home">Trang chủ</a></li>
            <li><a href="#">Sản phẩm</a></li>
            <li class="active"><span>Trả giá</span></li>
        </ol>
    </div>
{{/section}}

{{> categoriesPanel}}
{{#if empty}}
    Sản phẩm này chưa được đấu giá
{{else}}
<div class="container col-md-9">
    {{#each tragia}}
        <form method="post">
            <input type="text" name="gia" value="{{id}}" hidden>
            <div class="row" style="font-size: 150%;margin-top: 1%;">
                <div class="col-md-8">
                    {{shortDateTime thoigiantra}} - {{hideRealUserName ten}} => {{formatNumber gia}}
                </div>
                <div class="col-md-4">
                    <input type="submit" class="btn btn-default" value="KICK">
                </div>
            </div>
        </form>
    {{/each}}
</div>
{{/if}}