{{#section 'title'}}
    Chi tiết sản phẩm
{{/section}}

{{#section 'css'}}
    <link href="/assets/site.css" rel="stylesheet" />
    <link href="/assets/css/bootstrap-social.css" rel="stylesheet" type="text/css" media="all" />
    <link rel="stylesheet" type="text/css" href="/assets/css/breadcrumbs.css">
    <link href="/assets/css/docs.css" rel="stylesheet">

    <style type="text/css">
        .padding {
            padding-top: 8px;
        }
    </style>
{{/section}}

{{#section 'js'}}
{{/section}}

{{#section 'breadcrumbs'}}
    <div class="row container-fluid">
        <ol class="breadcrumb breadcrumb-arrow">
            <li><a href="/home">Trang chủ</a></li>
            <li><a href="/search">Tìm kiếm</a></li>
            <li class="active"><span>Chi tiết sản phẩm</span></li>
        </ol>
    </div>
{{/section}}

{{> categoriesPanel}}

<div class="container col-md-9">
    
        <!-- Tên sản phẩm -->
        <div class="row">
            <div class="col-md-1"></div>
            <div class="col-md-11">
                <span style="font-size:250%;text-align:center;">{{product.tensp}}</span>
            </div>
        </div>
        <!-- /Tên sản phẩm -->
        <div class="row">
            <div class="col-md-1"></div>
            <!-- Hình ảnh sản phẩm -->
            <div class="col-md-9" style="width: 700px;height: 400px;">
                <!-- Hình ảnh -->
                <div id="myCarousel" class="carousel slide" data-ride="carousel">
                    <!-- Indicators -->
                    <ol class="carousel-indicators">
                        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                        <li data-target="#myCarousel" data-slide-to="1"></li>
                        <li data-target="#myCarousel" data-slide-to="2"></li>
                    </ol>
                    <!-- Wrapper for slides -->
                    <div class="carousel-inner" id="wrapper">
                        <div class="item active">
                            <img src="/Imgs/sp/{{product.madaugia}}/main_thumbs.jpg">
                        </div>
                        <div class="item">
                            <img src="/Imgs/sp/{{product.madaugia}}/1.jpg">
                        </div>
                        <div class="item">
                            <img src="/Imgs/sp/{{product.madaugia}}/2.jpg">
                        </div>
                    </div>
                    <!-- Left and right controls -->
                    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                        <span class="glyphicon glyphicon-chevron-left"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="right carousel-control" href="#myCarousel" data-slide="next">
                        <span class="glyphicon glyphicon-chevron-right"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
            <div class="col-md-2"></div>
            <!-- /Hình ảnh sản phẩm -->
        </div>

        <div class="row">
            <!-- Thông tin -->
            <div class="col-md-2"></div>
            <div class="col-md-8" style="border:3px solid;border-color:#1057AF;background-color:#D9EDF7;padding:1.5% 1%;margin-top: 4%;">
                <div class="row" style="text-align:center;">
                    <div class="col-md-4">
                        Số lượt đấu giá
                        <br>
                        <span class="numberical-info">{{product.solandaugia}}</span>
                    </div>
                    <div class="col-md-4" style="border-left:2px solid #1057AF;">
                        Thời gian còn lại
                        <br>
                        <span class="numberical-info">{{timeRemain product.tgketthuc}}</span>
                    </div>
                    <div class="col-md-4">
                        <form method="post">
                            <button class="btn btn-default" style="background-color:#4784FF;color:#fff;display:flex;align-items:right;width:80%;">
                                <span class="glyphicon glyphicon-star" style="color:yellow;font-size:150%;"></span> &nbsp
                                <span style="font-weight:bold;">
                                    {{watching}}
                                </span>
                            </button>
                        </form>
                        <form method="get" action="/product/bidlog/{{product.madaugia}}">
                            <button class="btn btn-default" style="background-color:#4784FF;color:#fff;display:flex;align-items:right;width:80%;margin-top:1%;">
                                <span style="font-weight:bold;">
                                    Lịch sử đấu giá
                                </span>
                            </button>
                        </form>
                    </div>
                </div>
                <div class="row" style="text-align:center;margin-top:5%;">
                    <div class="col-md-6">
                        <div class="col-md-2"></div>
                        <div class="col-md-10" style="text-align:left;">
                            Giá hiện tại
                            <br>
                            <span class="numberical-info">{{formatNumber product.giahientai}}</span> VND
                        </div>
                        <form action="/product/bid/{{product.madaugia}}" method="get">
                            <button class="btn btn-default" style="width:70%;height:7%;margin-top:3%;box-shadow: 2px 2px 5px 0 rgba(0,0,0,0.2);border: none;border-radius: 0px;background-color: #0CC81E;">
                                <span style="font-weight: bold;color: #fff;">Đấu giá</span>
                            </button>
                        </form>
                    </div>
                    <div class="col-md-6">
                        <div class="col-md-2"></div>
                        <div class="col-md-10" style="text-align:left;">
                            Giá mua ngay
                            <br>
                            <span class="numberical-info">{{formatNumber product.giamuangay}}</span> VND
                        </div>
                        <form action="/product/buynow/{{product.madaugia}}" method="post">
                            <button class="btn btn-default" style="width:70%;height:7%;margin-top:3%;box-shadow: 2px 2px 5px 0 rgba(0,0,0,0.2);border: none;border-radius: 0px;background-color: #0CC81E;">
                                <span style="font-weight: bold;color: #fff;">Mua ngay</span>
                            </button>
                        </form>
                    </div>
                </div>
                <div class="row" style="border-top:2px solid #1057AF;margin-top: 2%;margin-left: 2%;margin-right: 2%;padding-top:3%;">
                    <div class="row">
                        <div class="col-md-3">
                            Người bán:
                        </div>
                        <div class="col-md-9" style="margin-top: -1%;">
                            <span><a style="text-decoration: none;cursor: pointer;font-weight: bold;font-size: 150%;">{{product.ten}}</a></span>
                        </div>
                    </div>
                    <div class="row" style="margin-top: 1%;">
                        <div class="col-md-3">
                            Điểm đánh giá:
                        </div>
                        <div class="col-md-9" style="margin-top: -1%;">
                            <span class="numberical-info"><a href="#">{{sub product.diemcong product.diemtru}}</a></span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-2"></div>
            <!-- /Thông tin -->
        </div>

        <div class="row" style="margin-top: 1%;">
            <!-- Thông tin đấu giá -->
            <div class="col-md-6" style="border: 2px solid;">
                <!-- Bảng 1 -->
                <div class="row odd-row">
                    <div class="col-sm-6" style="font-weight: bold;">
                        Mã đấu giá
                    </div>
                    <div class="col-sm-6">
                        {{product.madaugia}}
                    </div>
                </div>
                <div class="row even-row">
                    <div class="col-sm-6" style="font-weight: bold;">
                        Trạng thái
                    </div>
                    <div class="col-sm-6">
                        {{trangthai}}
                    </div>
                </div>
                <div class="row odd-row">
                    <div class="col-sm-6" style="font-weight: bold;">
                        Ngày giờ bắt đầu
                    </div>
                    <div class="col-sm-6">
                        {{shortDateTime product.tgbatdau}}
                    </div>
                </div>
                <div class="row even-row">
                    <div class="col-sm-6" style="font-weight: bold;">
                        Ngày giờ kết thúc
                    </div>
                    <div class="col-sm-6">
                        {{shortDateTime product.tgketthuc}}
                    </div>
                </div>
            </div>
            <div class="col-md-6" style="border: 2px solid;margin-left: -2px;">
                <!-- Bảng 2 -->
                <div class="row odd-row">
                    <div class="col-sm-6" style="font-weight: bold;">
                        Giá hiện tại
                    </div>
                    <div class="col-sm-6">
                        {{formatNumber product.giahientai}} VND
                    </div>
                </div>
                <div class="row even-row">
                    <div class="col-sm-6" style="font-weight: bold;">
                        Giá mua ngay
                    </div>
                    <div class="col-sm-6">
                        {{formatNumber product.giamuangay}} VND
                    </div>
                </div>
                <div class="row odd-row">
                    <div class="col-sm-6" style="font-weight: bold;">
                        Bước giá
                    </div>
                    <div class="col-sm-6">
                        {{formatNumber product.buocgia}} VND
                    </div>
                </div>
                <div class="row even-row">
                    <div class="col-sm-6" style="font-weight: bold;">
                        Người trả giá cao nhất
                    </div>
                    <div class="col-sm-6">
                        {{hideRealUserName product.tennguoitragia}}
                    </div>
                </div>
            </div>
        </div>
        <!-- /Thông tin đấu giá -->

        <div class="row" style="margin-top: 1%;">
            <!-- Thông tin sản phẩm -->
            <div class="col-md-1"></div>
            <div class="col-md-10">
                <span style="font-size: 120%;font-weight: bold;">Thông tin sản phẩm</span>
                <div class="col-md-12" style="border: 1px solid; padding:1%;">
                    {{{product.thongtin}}}
                </div>
            </div>
            <div class="col-md-1"></div>
        </div>
        <!-- /Thông tin sản phẩm -->
    
</div>